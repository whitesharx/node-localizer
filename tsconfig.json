{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "moduleResolution": "Node",
        "removeComments": true,
        "typeRoots": ["typings", "node_modules/@types"]
    },
    "exclude": ["node_modules", "dist"]
}
